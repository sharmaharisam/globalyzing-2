<%- include('partials/header') %>
<div class="container register-section">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <header class="card-header">
          <a href="/register" class="float-right btn btn-outline-primary mt-1">Register</a>
          <h4 class="card-title mt-2">Log In</h4>
        </header>
        <article class="card-body">
          <form class="" action="/login" method="POST">
            <div class="form-group">
              <label>Email address</label>
              <input type="email" class="form-control" placeholder="" name="username">
            </div> <!-- form-group end.// -->
            <div class="form-group">
              <label> Password</label>
              <input class="form-control" type="password" name="password">
            </div> <!-- form-group end.// -->
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block"> Login </button>
            </div> <!-- form-group// -->
            <div class="form-group">
             <a href="/forgot"> <button type="button" class="btn btn-primary btn-block">Forgot Password</button></a>
            </div> <!-- form-group// -->
          </form>
        </article> <!-- card-body end .// -->
        <div class="border-top card-body text-center"> Don't have an account? <a href="/register">Register</a>
          <br>
          <br>
          <div class="card">
            <div class="card-body">
              <a class="btn " href="/auth/google" role="button">
                <i class="fab fa-google"></i>
                Sign In with Google
              </a>
            </div>
          </div>
